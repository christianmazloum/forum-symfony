{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sujet</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sujet.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ sujet.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ sujet.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sujet_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('sujet_edit', { 'id': sujet.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
